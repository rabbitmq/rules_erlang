load("@rules_erlang//:erlang_bytecode2.bzl", "erlang_bytecode", "erlc_opts")
load("@rules_erlang//:app_file2.bzl", "app_file")
load("@rules_erlang//:erlang_app_info.bzl", "erlang_app_info")
load("@rules_erlang//:untar.bzl", "untar")

untar(
    name = "contents",
    outs = [
        "LICENSE",
        "LICENSE-APACHE2",
        "LICENSE-MPL-RabbitMQ",
        "README.md",
        "rebar.config",
        "rebar.lock",
        "src/aten.app.src",
        "src/aten.erl",
        "src/aten_app.erl",
        "src/aten_detect.erl",
        "src/aten_detector.erl",
        "src/aten_emitter.erl",
        "src/aten_sink.erl",
        "src/aten_sup.erl",
    ],
    archive = "contents.tar.gz",
)

erlc_opts(
    name = "erlc_opts",
    values = select({
        "@rules_erlang//:debug_build": [
            "+debug_info",
        ],
        "//conditions:default": [
            "+debug_info",
            "+deterministic",
        ],
    }),
)

erlang_bytecode(
    name = "ebin_aten_beam",
    srcs = ["src/aten.erl"],
    outs = ["ebin/aten.beam"],
    erlc_opts = ":erlc_opts",
)

erlang_bytecode(
    name = "ebin_aten_app_beam",
    srcs = ["src/aten_app.erl"],
    outs = ["ebin/aten_app.beam"],
    erlc_opts = ":erlc_opts",
)

erlang_bytecode(
    name = "ebin_aten_detect_beam",
    srcs = ["src/aten_detect.erl"],
    outs = ["ebin/aten_detect.beam"],
    erlc_opts = ":erlc_opts",
)

erlang_bytecode(
    name = "ebin_aten_detector_beam",
    srcs = ["src/aten_detector.erl"],
    outs = ["ebin/aten_detector.beam"],
    erlc_opts = ":erlc_opts",
)

erlang_bytecode(
    name = "ebin_aten_emitter_beam",
    srcs = ["src/aten_emitter.erl"],
    outs = ["ebin/aten_emitter.beam"],
    erlc_opts = ":erlc_opts",
)

erlang_bytecode(
    name = "ebin_aten_sink_beam",
    srcs = ["src/aten_sink.erl"],
    outs = ["ebin/aten_sink.beam"],
    erlc_opts = ":erlc_opts",
)

erlang_bytecode(
    name = "ebin_aten_sup_beam",
    srcs = ["src/aten_sup.erl"],
    outs = ["ebin/aten_sup.beam"],
    erlc_opts = ":erlc_opts",
)

filegroup(
    name = "beam_files",
    srcs = [
        "ebin/aten.beam",
        "ebin/aten_app.beam",
        "ebin/aten_detect.beam",
        "ebin/aten_detector.beam",
        "ebin/aten_emitter.beam",
        "ebin/aten_sink.beam",
        "ebin/aten_sup.beam",
    ],
)

app_file(
    name = "app_file",
    out = "ebin/aten.app",
    app_description = "Erlang node failure detector",
    app_name = "aten",
    app_src = ["src/aten.app.src"],
    app_version = "0.5.8",
    modules = [":beam_files"],
)

erlang_app_info(
    name = "erlang_app",
    srcs = [
        "src/aten.app.src",
        "src/aten.erl",
        "src/aten_app.erl",
        "src/aten_detect.erl",
        "src/aten_detector.erl",
        "src/aten_emitter.erl",
        "src/aten_sink.erl",
        "src/aten_sup.erl",
    ],
    hdrs = [],
    app = ":app_file",
    app_name = "aten",
    beam = [":beam_files"],
    license_files = [
        "LICENSE",
        "LICENSE-APACHE2",
        "LICENSE-MPL-RabbitMQ",
    ],
    visibility = ["//visibility:public"],
)

alias(
    name = "aten",
    actual = ":erlang_app",
    visibility = ["//visibility:public"],
)
