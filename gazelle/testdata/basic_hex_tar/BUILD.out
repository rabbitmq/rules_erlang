load("@rules_erlang//:erlang_bytecode2.bzl", "erlang_bytecode", "erlc_opts")
load("@rules_erlang//:erlang_app.bzl", "erlang_app")
load("@rules_erlang//:untar.bzl", "untar")

untar(
    name = "contents",
    outs = [
        "LICENSE",
        "LICENSE-APACHE2",
        "LICENSE-MPL-RabbitMQ",
        "README.md",
        "rebar.config",
        "rebar.lock",
        "src/aten.app.src",
        "src/aten.erl",
        "src/aten_app.erl",
        "src/aten_detect.erl",
        "src/aten_detector.erl",
        "src/aten_emitter.erl",
        "src/aten_sink.erl",
        "src/aten_sup.erl",
    ],
    archive = "contents.tar.gz",
)

erlc_opts(
    name = "erlc_opts",
    values = select({
        "@rules_erlang//:debug_build": [
            "+debug_info",
        ],
        "//conditions:default": [
            "+debug_info",
            "+deterministic",
        ],
    }),
    visibility = [":__subpackages__"],
)

erlc_opts(
    name = "test_erlc_opts",
    values = select({
        "@rules_erlang//:debug_build": [
            "+debug_info",
            "-DTEST=1",
        ],
        "//conditions:default": [
            "+debug_info",
            "-DTEST=1",
            "+deterministic",
        ],
    }),
    visibility = [":__subpackages__"],
)

erlang_bytecode(
    name = "ebin_aten_beam",
    srcs = ["src/aten.erl"],
    outs = ["ebin/aten.beam"],
    erlc_opts = "//:erlc_opts",
)

erlang_bytecode(
    name = "ebin_aten_app_beam",
    srcs = ["src/aten_app.erl"],
    outs = ["ebin/aten_app.beam"],
    erlc_opts = "//:erlc_opts",
)

erlang_bytecode(
    name = "ebin_aten_detect_beam",
    srcs = ["src/aten_detect.erl"],
    outs = ["ebin/aten_detect.beam"],
    erlc_opts = "//:erlc_opts",
)

erlang_bytecode(
    name = "ebin_aten_detector_beam",
    srcs = ["src/aten_detector.erl"],
    outs = ["ebin/aten_detector.beam"],
    erlc_opts = "//:erlc_opts",
)

erlang_bytecode(
    name = "ebin_aten_emitter_beam",
    srcs = ["src/aten_emitter.erl"],
    outs = ["ebin/aten_emitter.beam"],
    erlc_opts = "//:erlc_opts",
)

erlang_bytecode(
    name = "ebin_aten_sink_beam",
    srcs = ["src/aten_sink.erl"],
    outs = ["ebin/aten_sink.beam"],
    erlc_opts = "//:erlc_opts",
)

erlang_bytecode(
    name = "ebin_aten_sup_beam",
    srcs = ["src/aten_sup.erl"],
    outs = ["ebin/aten_sup.beam"],
    erlc_opts = "//:erlc_opts",
)

filegroup(
    name = "beam_files",
    srcs = [
        "ebin/aten.beam",
        "ebin/aten_app.beam",
        "ebin/aten_detect.beam",
        "ebin/aten_detector.beam",
        "ebin/aten_emitter.beam",
        "ebin/aten_sink.beam",
        "ebin/aten_sup.beam",
    ],
)

filegroup(
    name = "all_srcs",
    srcs = [
        "src/aten.app.src",
        "src/aten.erl",
        "src/aten_app.erl",
        "src/aten_detect.erl",
        "src/aten_detector.erl",
        "src/aten_emitter.erl",
        "src/aten_sink.erl",
        "src/aten_sup.erl",
    ],
)

erlang_app(
    app_description = "Erlang node failure detector",
    app_name = "aten",
    app_version = "0.5.8",
    erlc_opts = "//:erlc_opts",
    extra_license_files = [
        "LICENSE",
        "LICENSE-APACHE2",
        "LICENSE-MPL-RabbitMQ",
    ],
    extra_srcs = [
        "src/aten.erl",
        "src/aten_app.erl",
        "src/aten_detect.erl",
        "src/aten_detector.erl",
        "src/aten_emitter.erl",
        "src/aten_sink.erl",
        "src/aten_sup.erl",
    ],
)

alias(
    name = "aten",
    actual = ":erlang_app",
    visibility = ["//visibility:public"],
)
