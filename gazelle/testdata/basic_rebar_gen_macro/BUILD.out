load("@rules_erlang//:erlang_bytecode2.bzl", "erlc_opts")
load("@rules_erlang//:erlang_app.bzl", "erlang_app", "test_erlang_app")
load(":app.bzl", "all_beam_files", "all_srcs", "all_test_beam_files")

# gazelle:erlang_generate_beam_files_macro

erlc_opts(
    name = "erlc_opts",
    values = select({
        "@rules_erlang//:debug_build": [
            "+debug_info",
            "+recv_opt_info",
            "+warn_export_vars",
            "+warn_shadow_vars",
            "+warn_obsolete_guard",
        ],
        "//conditions:default": [
            "+debug_info",
            "+recv_opt_info",
            "+warn_export_vars",
            "+warn_shadow_vars",
            "+warn_obsolete_guard",
            "+deterministic",
        ],
    }),
    visibility = [":__subpackages__"],
)

erlc_opts(
    name = "test_erlc_opts",
    values = select({
        "@rules_erlang//:debug_build": [
            "+debug_info",
            "-DTEST=1",
        ],
        "//conditions:default": [
            "+debug_info",
            "-DTEST=1",
            "+deterministic",
        ],
    }),
    visibility = [":__subpackages__"],
)

all_beam_files()

all_test_beam_files()

all_srcs()

erlang_app(
    all_srcs = [":all_srcs"],
    app_name = "seshat",
    beam_files = [":beam_files"],
    extra_apps = [
        "crypto",
        "sasl",
    ],
    public_hdrs = [],
)

test_erlang_app(
    all_srcs = [":all_srcs"],
    app_name = "seshat",
    beam_files = [":test_beam_files"],
    extra_apps = [
        "crypto",
        "sasl",
    ],
    public_hdrs = [],
)

alias(
    name = "seshat",
    actual = ":erlang_app",
    visibility = ["//visibility:public"],
)
