load("@rules_erlang//:erlang_bytecode2.bzl", "erlang_bytecode", "erlc_opts")
load("@rules_erlang//:erlang_app.bzl", "erlang_app", "test_erlang_app")

erlc_opts(
    name = "erlc_opts",
    values = select({
        "@rules_erlang//:debug_build": [
            "+debug_info",
            "+recv_opt_info",
            "+warn_export_vars",
            "+warn_shadow_vars",
            "+warn_obsolete_guard",
        ],
        "//conditions:default": [
            "+debug_info",
            "+recv_opt_info",
            "+warn_export_vars",
            "+warn_shadow_vars",
            "+warn_obsolete_guard",
            "+deterministic",
        ],
    }),
    visibility = [":__subpackages__"],
)

erlc_opts(
    name = "test_erlc_opts",
    values = select({
        "@rules_erlang//:debug_build": [
            "+debug_info",
            "-DTEST=1",
        ],
        "//conditions:default": [
            "+debug_info",
            "-DTEST=1",
            "+deterministic",
        ],
    }),
    visibility = [":__subpackages__"],
)

erlang_bytecode(
    name = "ebin_seshat_beam",
    srcs = ["src/seshat.erl"],
    outs = ["ebin/seshat.beam"],
    erlc_opts = "//:erlc_opts",
)

erlang_bytecode(
    name = "test_seshat_beam",
    testonly = True,
    srcs = ["src/seshat.erl"],
    outs = ["test/seshat.beam"],
    erlc_opts = "//:test_erlc_opts",
)

erlang_bytecode(
    name = "ebin_seshat_app_beam",
    srcs = ["src/seshat_app.erl"],
    outs = ["ebin/seshat_app.beam"],
    erlc_opts = "//:erlc_opts",
)

erlang_bytecode(
    name = "test_seshat_app_beam",
    testonly = True,
    srcs = ["src/seshat_app.erl"],
    outs = ["test/seshat_app.beam"],
    erlc_opts = "//:test_erlc_opts",
)

erlang_bytecode(
    name = "ebin_seshat_counters_server_beam",
    srcs = ["src/seshat_counters_server.erl"],
    outs = ["ebin/seshat_counters_server.beam"],
    erlc_opts = "//:erlc_opts",
)

erlang_bytecode(
    name = "test_seshat_counters_server_beam",
    testonly = True,
    srcs = ["src/seshat_counters_server.erl"],
    outs = ["test/seshat_counters_server.beam"],
    erlc_opts = "//:test_erlc_opts",
)

erlang_bytecode(
    name = "ebin_seshat_sup_beam",
    srcs = ["src/seshat_sup.erl"],
    outs = ["ebin/seshat_sup.beam"],
    erlc_opts = "//:erlc_opts",
)

erlang_bytecode(
    name = "test_seshat_sup_beam",
    testonly = True,
    srcs = ["src/seshat_sup.erl"],
    outs = ["test/seshat_sup.beam"],
    erlc_opts = "//:test_erlc_opts",
)

filegroup(
    name = "beam_files",
    srcs = [
        "ebin/seshat.beam",
        "ebin/seshat_app.beam",
        "ebin/seshat_counters_server.beam",
        "ebin/seshat_sup.beam",
    ],
)

filegroup(
    name = "test_beam_files",
    testonly = True,
    srcs = [
        "test/seshat.beam",
        "test/seshat_app.beam",
        "test/seshat_counters_server.beam",
        "test/seshat_sup.beam",
    ],
)

filegroup(
    name = "all_srcs",
    srcs = [
        "src/seshat.app.src",
        "src/seshat.erl",
        "src/seshat_app.erl",
        "src/seshat_counters_server.erl",
        "src/seshat_sup.erl",
    ],
)

erlang_app(
    all_srcs = [":all_srcs"],
    app_name = "seshat",
    beam_files = [":beam_files"],
    extra_apps = [
        "crypto",
        "sasl",
    ],
    public_hdrs = [],
)

test_erlang_app(
    all_srcs = [":all_srcs"],
    app_name = "seshat",
    beam_files = [":test_beam_files"],
    extra_apps = [
        "crypto",
        "sasl",
    ],
    public_hdrs = [],
)

alias(
    name = "seshat",
    actual = ":erlang_app",
    visibility = ["//visibility:public"],
)
